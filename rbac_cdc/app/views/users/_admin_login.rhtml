<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
	"http://www.w3.org/TR/html4/loose.dtd">
	
<html>
<head>
	<meta http-equiv="Content-type" content="text/html; charset=utf-8">
	<title>Privilege</title>	
	<%= stylesheet_link_tag "depot", :media => "all"%>
	<%= javascript_include_tag :defaults %>
</head>
<body id="store">
<div id="banner">		
		<%= @page_title || "Privilege"%>
	</div>
	
	<div id = "columns">
		<div id="side">												
			<%time = Time.now;%>		
			
			<hr />
			<div style = "color:#fff"><%= time.localtime%></div>
		</div>
		<div id = "main" style = "padding:50px;">			
			<% if flash[:notice] %>
				<div id = "notice"><%= flash[:notice]%></div>
			<% end %>
			<% form_tag :action => 'admin_login', :method => 'post' do -%>
			
				<p><label for="user_login">Login</label><br/>
				<%= text_field 'user', 'login'  %></p>
				
				<p><label for="user_password">Password</label><br/>
				<%= password_field 'user', 'password'  %></p>
					
			    <dd><%= submit_tag "Login" %></dd>
			<% end -%>
		</div>
	</div>
</body>
</html>





